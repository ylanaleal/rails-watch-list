<div class="container">
      <%# CARDS %>
  <div class="row my-3 mx-auto">
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-outline-dark my-1 mx-auto" %>
      <% @lists.each do |list| %>
        <div class="col-sm-3 p-0">
          <div class="card d-flex flex-row m-3">
              <img class="card-img-top" src="https://hips.hearstapps.com/hmg-prod/images/hbz-classic-movies-rebecca-gettyimages-2629943-1590707751.jpg" alt="Card image">

              <%= link_to list_path(list), class:"text-decoration-none card-name" do %>
                <%= list.name %>
              <% end %>
          </div>
        </div>
      <% end %>
  </div>
</div>
